<h2>Add a Movie to the database</h2>

<form action="" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="movie-title-input">
    </div>

    <div>
        <label for="genre">Genre:</label>
        <input type="text" name="genre" id="movie-genre-input">
    </div>

    <div>
        <label for="plot">Plot:</label>
        <input type="text" name="plot" id="movie-plot-input">
    </div>
    <div>
        <label for="cast">Actors:</label>
        <select name="cast" id="movie-actor-input" multiple>
            {{#each actorOptions}}
            <option value="{{_id}}">{{name}}</option>
            {{/each}}
        </select>
    </div>
    <button>Add</button>
</form>