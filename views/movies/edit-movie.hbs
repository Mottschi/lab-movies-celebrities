<h2>Edit details for "{{movie.title}}</h2>

{{#if error}}
<div class="warning">
    <p>An error has occurred: {{error.message}}</p>
    <p>Please correct the issue and then try to save your entry again.</p>
</div>
{{/if}}

<form action="/movies/{{movie._id}}" method="POST">
    <div>
        <label for="title">Title:</label>
        <input type="text" name="title" id="movie-title-input" value="{{movie.title}}">
    </div>

    <div>
        <label for="genre">Genre:</label>
        <input type="text" name="genre" id="movie-genre-input" value="{{movie.genre}}">
    </div>

    <div>
        <label for="plot">Plot:</label>
        <input type="text" name="plot" id="movie-plot-input" value="{{movie.plot}}">
    </div>
    <div>
        <label for="cast">Actors:</label>
        <select name="cast" id="movie-actor-input" multiple>
            {{#each actorOptions}}
            <option value="{{_id}}" {{#if selected}}selected{{/if}}>{{name}}</option>
            {{/each}}
        </select>
    </div>
    <button>Edit</button>
</form>